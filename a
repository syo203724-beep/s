  <script>
    // ãƒ­ãƒ¼ã‚«ãƒ«ã‚¹ãƒˆãƒ¬ãƒ¼ã‚¸ã®ã‚­ãƒ¼
    const STORAGE_KEY = 'cleaning_schedule_data';

    // ã‚°ãƒ­ãƒ¼ãƒãƒ«å¤‰æ•°
    let members = [];
    let waitingMembers = [];
    let currentSchedule = [];

    // åˆæœŸåŒ–
    document.addEventListener('DOMContentLoaded', function() {
      loadData();
      updateMemberDisplay();
      
      // Enterã‚­ãƒ¼ã§ãƒ¡ãƒ³ãƒãƒ¼è¿½åŠ 
      document.getElementById('memberName').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          addMember();
        }
      });
    });

    // ãƒ‡ãƒ¼ã‚¿ã®èª­ã¿è¾¼ã¿
    function loadData() {
      const saved = localStorage.getItem(STORAGE_KEY);
      if (saved) {
        try {
          const data = JSON.parse(saved);
          members = data.members || [];
          waitingMembers = data.waitingMembers || [];
          currentSchedule = data.currentSchedule || [];
          
          if (data.cleaningSlots) {
            document.getElementById('cleaningSlots').value = data.cleaningSlots;
          }
          if (data.waitingSlots) {
            document.getElementById('waitingSlots').value = data.waitingSlots;
          }
          
          updateMemberDisplay();
          if (currentSchedule.length > 0) {
            displaySchedule();
          }
        } catch (e) {
          console.error('ãƒ‡ãƒ¼ã‚¿èª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:', e);
        }
      }
    }

    // ãƒ‡ãƒ¼ã‚¿ã®ä¿å­˜
    function saveData() {
      const data = {
        members: members,
        waitingMembers: waitingMembers,
        currentSchedule: currentSchedule,
        cleaningSlots: parseInt(document.getElementById('cleaningSlots').value),
        waitingSlots: parseInt(document.getElementById('waitingSlots').value),
        lastUpdated: new Date().toISOString()
      };
      
      localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
      showAlert('ãƒ‡ãƒ¼ã‚¿ã‚’ä¿å­˜ã—ã¾ã—ãŸï¼', 'success');
    }

    // ãƒ¡ãƒ³ãƒãƒ¼è¿½åŠ 
    function addMember() {
      const input = document.getElementById('memberName');
      const name = input.value.trim();
      
      if (!name) {
        showAlert('ãƒ¡ãƒ³ãƒãƒ¼åã‚’å…¥åŠ›ã—ã¦ãã ã•ã„', 'error');
        return;
      }
      
      if (members.includes(name)) {
        showAlert('ã“ã®ãƒ¡ãƒ³ãƒãƒ¼ã¯æ—¢ã«ç™»éŒ²ã•ã‚Œã¦ã„ã¾ã™', 'error');
        return;
      }
      
      members.push(name);
      input.value = '';
      updateMemberDisplay();
      showAlert(`${name} ã‚’è¿½åŠ ã—ã¾ã—ãŸ`, 'success');
    }

    // ãƒ¡ãƒ³ãƒãƒ¼å‰Šé™¤
    function removeMember(name) {
      const index = members.indexOf(name);
      if (index > -1) {
        members.splice(index, 1);
        updateMemberDisplay();
        showAlert(`${name} ã‚’å‰Šé™¤ã—ã¾ã—ãŸ`, 'success');
      }
    }

    // ãƒ¡ãƒ³ãƒãƒ¼è¡¨ç¤ºã®æ›´æ–°
    function updateMemberDisplay() {
      const container = document.getElementById('memberList');
      container.innerHTML = '';
      
      if (members.length === 0) {
        container.innerHTML = '<p style="color: #999; padding: 20px;">ãƒ¡ãƒ³ãƒãƒ¼ãŒç™»éŒ²ã•ã‚Œã¦ã„ã¾ã›ã‚“</p>';
        return;
      }
      
      members.forEach(name => {
        const chip = document.createElement('div');
        chip.className = 'member-chip';
        chip.innerHTML = `
          <span>${name}</span>
          <button class="remove-btn" onclick="removeMember('${name}')">Ã—</button>
        `;
        container.appendChild(chip);
      });
    }

    // å½“ç•ªè¡¨ç”Ÿæˆ
    function generateSchedule() {
      if (members.length === 0) {
        showAlert('ãƒ¡ãƒ³ãƒãƒ¼ã‚’ç™»éŒ²ã—ã¦ãã ã•ã„', 'error');
        return;
      }

      showLoading(true);
      
      setTimeout(() => {
        const cleaningSlots = parseInt(document.getElementById('cleaningSlots').value);
        const waitingSlots = parseInt(document.getElementById('waitingSlots').value);

        if (cleaningSlots > members.length) {
          showAlert('å½“ç•ªäººæ•°ãŒãƒ¡ãƒ³ãƒãƒ¼æ•°ã‚’è¶…ãˆã¦ã„ã¾ã™', 'error');
          showLoading(false);
          return;
        }

        // ãƒ­ãƒ¼ãƒ†ãƒ¼ã‚·ãƒ§ãƒ³ãƒ­ã‚¸ãƒƒã‚¯
        const nonWaitingMembers = members.filter(m => !waitingMembers.includes(m));
        const rotationList = [...waitingMembers, ...nonWaitingMembers];
        
        const currentDutyMembers = rotationList.slice(0, cleaningSlots);
        const nextWaitingMembers = rotationList.slice(cleaningSlots, cleaningSlots + waitingSlots);

        // æ›œæ—¥ã”ã¨ã«å‰²ã‚Šå½“ã¦
        const daysOfWeek = ['æœˆ', 'ç«', 'æ°´', 'æœ¨', 'é‡‘ï¼ˆåŠ æ¹¿å™¨ãƒ»ã‚´ãƒŸï¼‰'];
        const membersPerDay = Math.ceil(currentDutyMembers.length / daysOfWeek.length);
        
        currentSchedule = [];
        for (let i = 0; i < membersPerDay; i++) {
          const row = {
            label: `å½“ç•ª ${i + 1}`,
            members: []
          };
          for (let day = 0; day < daysOfWeek.length; day++) {
            const memberIndex = i + (day * membersPerDay);
            row.members.push(currentDutyMembers[memberIndex] || '');
          }
          currentSchedule.push(row);
        }

        waitingMembers = nextWaitingMembers;
        
        displaySchedule();
        showLoading(false);
        showAlert('å½“ç•ªè¡¨ã‚’ç”Ÿæˆã—ã¾ã—ãŸï¼', 'success');
      }, 500);
    }

    // å½“ç•ªè¡¨è¡¨ç¤º
    function displaySchedule() {
      const container = document.getElementById('scheduleDisplay');
      const daysOfWeek = ['æœˆ', 'ç«', 'æ°´', 'æœ¨', 'é‡‘ï¼ˆåŠ æ¹¿å™¨ãƒ»ã‚´ãƒŸï¼‰'];
      
      let html = '<table class="schedule-table"><thead><tr><th>åŒºåˆ†</th>';
      daysOfWeek.forEach(day => {
        html += `<th>${day}</th>`;
      });
      html += '</tr></thead><tbody>';
      
      currentSchedule.forEach(row => {
        html += `<tr><td><strong>${row.label}</strong></td>`;
        row.members.forEach(member => {
          html += `<td>${member || 'ï¼'}</td>`;
        });
        html += '</tr>';
      });
      
      html += '</tbody></table>';
      container.innerHTML = html;

      // å¾…æ©Ÿãƒªã‚¹ãƒˆè¡¨ç¤º
      const waitingContainer = document.getElementById('waitingDisplay');
      if (waitingMembers.length > 0) {
        let waitingHtml = '<div class="waiting-list"><h3>â³ æ¬¡å›ã®å„ªå…ˆå¾…æ©Ÿçµ„</h3><div class="waiting-members">';
        waitingMembers.forEach(member => {
          waitingHtml += `<span class="waiting-member">${member}</span>`;
        });
        waitingHtml += '</div></div>';
        waitingContainer.innerHTML = waitingHtml;
      } else {
        waitingContainer.innerHTML = '';
      }
    }

    // PDFå‡ºåŠ›
    function exportToPDF() {
      if (currentSchedule.length === 0) {
        showAlert('å…ˆã«å½“ç•ªè¡¨ã‚’ç”Ÿæˆã—ã¦ãã ã•ã„', 'error');
        return;
      }

      showLoading(true);
      
      setTimeout(() => {
        const date = new Date();
        const fileName = `${date.getFullYear()}å¹´${String(date.getMonth() + 1).padStart(2, '0')}æœˆ_æƒé™¤å½“ç•ªè¡¨.pdf`;
        
        // å°åˆ·ãƒ€ã‚¤ã‚¢ãƒ­ã‚°ã‚’é–‹ã
        window.print();
        
        showLoading(false);
        showAlert('å°åˆ·ãƒ€ã‚¤ã‚¢ãƒ­ã‚°ã‚’é–‹ãã¾ã—ãŸã€‚PDFã¨ã—ã¦ä¿å­˜ã—ã¦ãã ã•ã„ã€‚', 'success');
      }, 300);
    }

    // ã‚¢ãƒ©ãƒ¼ãƒˆè¡¨ç¤º
    function showAlert(message, type) {
      const alert = document.getElementById('alert');
      alert.className = `alert alert-${type} show`;
      alert.textContent = message;
      
      setTimeout(() => {
        alert.classList.remove('show');
      }, 3000);
    }

    // ãƒ­ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°è¡¨ç¤º
    function showLoading(show) {
      const loading = document.getElementById('loading');
      if (show) {
        loading.classList.add('show');
      } else {
        loading.classList.remove('show');
      }
    }

    // å°åˆ·ç”¨ã‚¹ã‚¿ã‚¤ãƒ«
    const style = document.createElement('style');
    style.textContent = `
      @media print {
        body * {
          visibility: hidden;
        }
        #scheduleDisplay, #scheduleDisplay * {
          visibility: visible;
        }
        #scheduleDisplay {
          position: absolute;
          left: 0;
          top: 0;
        }
        .card {
          box-shadow: none;
        }
      }
    `;
    document.head.appendChild(style);
  </script>
